<div id="answer">
 <h3> Answer </h3>
 <%= form_for(item, html: {'data-turbo': false}) do |f| %>
   <div class="field">
     <%= f.hidden_field :question_id %><br />
     <%= f.label :body %><br />
     <%= f.text_area :body, required: true, rows: 6, cols: 10, placeholder: "Leave your answer...", autocomplete: false %>
   </div>
   <div class="actions">
     <%= f.submit "Submit" %>
   </div>
 <% end %>
</div>
