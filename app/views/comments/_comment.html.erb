<div class="rounded overflow-hidden shadow-lg">
  <div class="px-6 py-4">
    <p class="text-gray-700 text-base">
      <%= item.comment %>
    </p>
  </div>
  <div class="user">
  <%= image_tag avatar_url_for(item.user), class: "rounded-full h-8 w-8 align-middle" %>
  <a href="<%=user_path(item.user)%>"><%=item.user.name%></a>
  </div>
  <% if current_user.id == item.user_id %>
    <%= link_to "Delete", comments_path(item), data: { 'turbo-method': "delete", 'delete-target': "link", action: "turbo:click->delete#captureClick turbo:before-fetch-request@window->delete#deleteAndHide" } %>
    </p>
  </div>
  <% end %>
</div>
