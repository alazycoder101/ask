<div id="comment">
<%= form_for(item, html: {'data-turbo': false}) do |f| %>
  <div class="field">
    <%= f.hidden_field :commentable_id %>
    <%= f.hidden_field :commentable_type %>
    <%= f.label :comment %><br />
    <%= f.text_area :comment, required: true, rows: 10, cols: 10, placeholder: "Leave your comment...", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
</div>
